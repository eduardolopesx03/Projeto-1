{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["TS/**/*.ts"],  // Inclui todos os arquivos .ts dentro da pasta TS
  "exclude": ["node_modules"]
}
